<p style="color: green"><%= notice %></p>

<h1>Decks</h1>

<div id="decks">
  <% @decks.each do |deck| %>
    <%= render deck %>
    <p>
      <%= link_to "Show this deck", deck %>
    </p>
  <% end %>
</div>

<%= link_to "New deck", new_deck_path %>

<%= form_tag(cards_path, method: :get) do %>
  <%= text_field_tag(:query, params[:query], placeholder: "Enter card name") %>
  <%= submit_tag("Search") %>
<% end %>
